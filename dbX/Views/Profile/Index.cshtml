@model dbX.Models.User

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="profile-icon-container">
            <div class="featured-img-profile"></div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="coins-container">
            <div class="panel panel-default coins">
                <div class="panel-heading" style="background-color: lightgray">
                    <h3><b>Your Coins:</b></h3>
                </div>
                <div class="panel-body" style="align-content:center">
                    <font size="5">@ViewData["Coins"]</font>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="profile-name-container">
            <h2>@ViewData["Username"]</h2>
        </div>
    </div>
    <div class="col-md-4">
    </div>
</div>

<hr/>

<div class="row">
    <div class="col-md-12">
        <div class="profile-tab-container">
            <ul class="nav nav-tabs nav-justified">
                <li role="presentation" class="active"><a href="#">Your Followed Bounties</a></li>
                <li role="presentation"><a href="#">Your Open Bounties</a></li>
                <li role="presentation"><a href="#">Your Solved Bounties</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <table class="table">
        <tr>
            <th>Bounty Title</th>
            <th>Description</th>
            <th>Difficulty</th>
            <th>Value</th>
            <th>Time Left</th>
            <th></th>
        </tr>
            @{
                foreach (var bounty in (ViewData["FollowedBounties"] as IEnumerable<dbX.Models.Bounty>))
                {
                    <tr>
                        <td>
                            @bounty.Title
                        </td>
                        <td>
                            @bounty.Background
                        </td>
                        <td>
                            @bounty.Difficulty
                        </td>
                        <td>
                            @bounty.Coins
                        </td>
                        <td>
                            @{
                                DateTime currentDate = DateTime.Now;
                                TimeSpan timeLeft = bounty.EndTime.Subtract(currentDate);
                                @timeLeft.Days
                            }
                            days
                        </td>
                        <td>
                            @Html.ActionLink(HttpUtility.HtmlDecode("View"), "Index", "BountyPost", new { area = "" }, new { @class = "btn btn-primary btn-xs" })
                        </td>
                    </tr>
                
                }
            }
    </table>
