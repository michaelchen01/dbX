@model dbX.Models.Bounty

 @{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Null Pointer Exception in Java Method</h1>
</div>


<div class="row">
    <div class="col-md-8" style="text-align:left">
        <h1>Background</h1>
        <p style="max-width: none;">
            <font size="4">
                <code>
                    Java
                </code> 
                <code>
                    List
                </code>
                <code>
                    NullPointerException
                </code>
                @foreach (var item in Model.Tags)
                {
                    <code>
                        @Html.DisplayFor(modelItem => item)
                    </code>
                }
            </font>
        </p>
    </div>
    <div class="col-md-4" style="text-align:center">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: lightgray">
                <h3><b>Price</b></h3>
            </div>
            <div class="panel-body" style="align-content:center">
                <font size="5">$10</font>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8" style="text-align:left">
        <h1>Task</h1>
        <p>@Html.DisplayFor(modelItem => Model.Background)</p>
    </div>
    <div class="col-md-4" style="text-align: center">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: lightgray">
                <h3><b>
                    Time Left
                </b></h3>
            </div>
            <div class="panel-body" style="align-content:center">
                <font size="5">
                    @{
                        DateTime currentDate = DateTime.Now;
                        TimeSpan timeLeft = Model.EndTime.Subtract(currentDate);
                        @Html.DisplayFor(modelItem => timeLeft.Days)
                    }
                </font>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="text-center">
        <div class="btn btn-success btn-lg center-block" style="text-align: center"><font size="5">Participate</font></div>
    </div>
</div>

