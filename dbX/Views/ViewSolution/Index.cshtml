
@{
    ViewBag.Title = "View Solution";
}

<div class="page-header">
    <h1>Solution for @ViewData["BountyTitle"]</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <h1>Description</h1>
        <p>@Html.Raw(ViewData["Description"])</p>
        <hr/>
        <h1>Code</h1>
        <p><code>@Html.Raw(ViewData["Code"])</code></p>
    </div>
    <div class="col-md-4" style="text-align: center">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: lightgray">
                <h3>
                    <b>
                        Posted On
                    </b>
                </h3>
            </div>
            <div class="panel-body" style="align-content:center">
                <font size="5">
                    @ViewData["LastModified"]
                </font>
            </div>
        </div>
    </div>
</div>

<hr/>

<div class="row">
    <div class="text-center">
        <div id="accept-button" class="btn btn-success btn-lg center-block" style="text-align: center"><font size="5">Accept</font></div>
    </div>
</div>

